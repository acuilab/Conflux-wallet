<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/address_input_layout"
        android:layout_marginTop="@dimen/big_margin"
        android:focusable="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        >
        <EditText
            android:id="@+id/address"
            android:hint="@string/hint_contract_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/base_text_color"
            android:textSize="13sp"
            />
    </android.support.design.widget.TextInputLayout>




    <android.support.design.widget.TextInputLayout
        android:id="@+id/symbol_input_layout"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@null"
        >
        <EditText
            android:id="@+id/symbol"
            android:hint="@string/hint_contract_symbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="16"
            android:textColor="@color/base_text_color"
            android:textSize="13sp"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/decimal_input_layout"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
        <EditText
            android:id="@+id/decimals"
            android:hint="@string/hint_contract_decimals"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="16"
            android:textColor="@color/base_text_color"
            android:textSize="13sp"
            />
    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/token_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:enabled="false"
            android:text="CRC20"
            android:textColor="@color/discovery_application_item_name_color"
            android:textSize="13sp" />


        <LinearLayout
            android:id="@+id/lly_type_memu"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="end">

            <ImageView
                android:layout_width="6dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_right_arrow" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/create_wallet_btn_bg_selector"
        android:enabled="true"
        android:gravity="center"
        android:text="@string/action_save"
        android:textColor="@color/white" />

</LinearLayout>
