<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lly_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/add_property_gray_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_ico_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="30dp"
            android:text="0x00000000000000"
            android:textColor="@color/property_ico_name_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/send_button"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/create_wallet_btn_bg_selector"
            android:enabled="true"
            android:gravity="center"
            android:text="@string/sent"

            android:textColor="@color/white" />



    </RelativeLayout>


</LinearLayout>